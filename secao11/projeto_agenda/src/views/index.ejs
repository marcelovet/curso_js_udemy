<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-4">
      <%- include('includes/messages') %>
      <h1 class="text-center">Agenda de Contatos</h1>
      

      <!-- Template da tabela de contatos -->
      <% if (contacts.length > 0) { %>
        <p class="text-center lead">Seus constatos estao abaixo</p>
        <div class="responsive-table">
          <table class="table table-hover my-3">
            <thead>
              <tr>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Email</th>
                <th scope="col">Editar</th>
                <th scope="col">Excluir</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% contacts.forEach(contact => { %>
                <tr>
                  <td><%= contact.firstname %></td>
                  <td><%= contact.lastname %></td>
                  <td><%= contact.phone %></td>
                  <td><%= contact.email %></td>
                  <td><a href="/contact/<%= contact._id %>"><i class="bi bi-pencil"></i></a></td>
                  <td><a class="text-danger" href="/contact/delete/<%= contact._id %>"><i class="bi bi-trash"></i></a></td>
                </tr>
              <% }) %>            
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center lead">Voce nao possui contatos cadastrados</p>
      <% } %>

      

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/foot') %>
