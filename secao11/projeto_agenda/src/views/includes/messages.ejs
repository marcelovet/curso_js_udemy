<!-- mensagens de erro -->
<% if (errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <% errors.forEach(error => { %>
        <div class="alert alert-danger"><%- error %></div>
      <% }) %>
    </div>
  </div> 
<% } %>

<!-- mensagens de sucesso -->
<% if (success.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-success"><%- success %></div>
    </div>
  </div> 
<% } %>